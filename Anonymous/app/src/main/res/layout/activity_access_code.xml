<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccessCodeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="40dp"
        android:text="Wish to allow Non-Faculty Advisor access to this Student? Click the Button below!"
        android:paddingRight="70dp"
        android:paddingLeft="70dp"
        android:textStyle="italic"
        android:textSize="30sp"
        android:textColor="@color/black">

    </TextView>

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ALLOW ACCESS"
        android:id="@+id/allow"
        android:layout_centerInParent="true">

    </android.widget.Button>

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE ACCESS"
        android:id="@+id/noaccess"
        android:layout_below="@+id/allow"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp">

    </android.widget.Button>

</RelativeLayout>
