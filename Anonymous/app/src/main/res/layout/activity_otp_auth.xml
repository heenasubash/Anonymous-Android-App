<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".otpAuth">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/logo">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your OTP"
        android:textSize="22sp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:padding="20dp"
        android:textColor="#6e6e6e"
        android:layout_below="@+id/logo"
        android:id="@+id/heading_message">

    </TextView>

    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/heading_message"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="25dp"
        android:hint="Enter OTP here"
        android:textColor="@color/black"
        android:id="@+id/getOTP"
        android:textAlignment="center"
        android:inputType="number">

    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive OTP? Re-enter your number"
        android:layout_below="@+id/getOTP"
        android:id="@+id/ChangeNumberText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="italic">

    </TextView>

    <android.widget.Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/ChangeNumberText"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="#25d366"
        android:text="VERIFY OTP"
        android:textSize="15sp"
        android:id="@+id/VerifyOTP">


    </android.widget.Button>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/VerifyOTP"
        android:layout_marginTop="40dp"
        android:id="@+id/progressbarOTP"
        android:visibility="invisible">

    </ProgressBar>




</RelativeLayout>